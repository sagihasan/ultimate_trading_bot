import pandas as pd
from pathlib import Path

# יצירת תקיית data אם לא קיימת
data_path = Path("data")
data_path.mkdir(parents=True, exist_ok=True)

# עמודות לקובץ trade_management_log.xlsx
trade_mgmt_columns = [
    "תאריך",
    "מניה",
    "סטופ קודם",
    "סטופ חדש",
    "טייק קודם",
    "טייק חדש",
    "תוצאה צפויה"
]

# יצירת DataFrame ושמירה לקובץ Excel
df = pd.DataFrame(columns=trade_mgmt_columns)
df.to_excel(data_path / "trade_management_log.xlsx", index=False)

print("trade_management_log.xlsx נוצר בהצלחה בתיקיית data.")
